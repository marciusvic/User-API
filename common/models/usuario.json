{
  "name": "Usuario",
  "base": "User",
  "properties": {},
  "validations": [],
  "relations": {
    "books": {
      "type": "hasMany",
      "model": "Books",
      "foreignKey": "created_by"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "alterarNomeLivro"
    }

  ],
  "methods": {"prototype.alterarNomeLivro": {
    "accepts": [
      {
        "arg": "context",
        "type": "object",
        "http": { "source": "context" }
      },
      {
        "arg": "fk",
        "type": "string",
        "required": true,
        "description": "Id do livro"
      },
      {
        "arg": "dados",
        "type": "object",
        "http": { "source": "body" }
      }
    ],
    "returns": [
      {
        "arg": "title",
        "type": "string",
        "description": "Novo título do livro"
      }
    ],
    "description": "Altera o título do livro",
    "http": {
      "verb": "patch",
      "path": "/alterarNomeLivro/:fk"
    }
  }}
}
